<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/iv_customer_image"
        android:layout_height="50dp"
        android:layout_width="0dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="7dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_account_number"
        app:layout_constraintRight_toRightOf="@+id/iv_customer_status"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_account_number"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="7dp"
        app:layout_constraintHorizontal_bias="0.0"/>

    <ImageView
        android:id="@+id/iv_customer_status"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/colorAccent"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="58dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_customer_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_customer_image"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="58dp"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Customer Name"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_account_number"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_account_number"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        tools:text="A/C Number"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_customer_status"/>

    <ImageView
        android:id="@+id/iv_is_sync"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/ic_assignment_turned_in_black_24dp"
        app:layout_constraintDimensionRatio="h,1:2"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"/>

</android.support.constraint.ConstraintLayout>