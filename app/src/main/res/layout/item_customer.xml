<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/iv_customer_image"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/tv_account_number"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_account_number"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:id="@+id/iv_customer_status"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="@android:drawable/ic_notification_overlay"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_customer_image"
        android:layout_marginEnd="2dp"
        app:layout_constraintRight_toRightOf="@+id/iv_customer_image"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="2dp"/>

    <TextView
        android:id="@+id/tv_customer_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Customer Name"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_customer_image"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_account_number"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Body2"
        android:layout_width="wrap_content"
        tools:text="A/C Number"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_customer_name"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/tv_customer_name"/>

    <ImageView
        android:id="@+id/iv_is_sync"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_assignment_turned_in_black_24dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" app:layout_constraintDimensionRatio="h,1:2"/>

</android.support.constraint.ConstraintLayout>