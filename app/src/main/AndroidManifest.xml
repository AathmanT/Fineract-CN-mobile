<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mifos.apache.fineract">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".MifosApplication"
        android:theme="@style/AppTheme">

        <activity android:name=".ui.online.launcher.LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.online.login.LoginActivity" />

        <activity android:name=".ui.online.DashboardActivity" />

        <activity android:name=".ui.online.customerdetails.CustomerDetailsActivity" />

        <activity android:name=".ui.online.customerdeposit.CustomerDepositActivity" />

        <activity android:name=".ui.online.customerloans.CustomerLoansActivity" />

        <activity android:name=".ui.online.plannedpayment.PlannedPaymentActivity" />

        <activity android:name=".ui.online.loanapplication.loanactivity.LoanApplicationActivity" />

        <activity android:name=".ui.online.createcustomer.customeractivity.CreateCustomerActivity" />

    </application>

</manifest>